# API Configuration
API_PORT=3001
API_HOST=0.0.0.0

# CORS
CORS_ORIGIN=*

# Rate Limiting
RATE_LIMIT_ANONYMOUS=60
RATE_LIMIT_AUTHENTICATED=300

# Database (read-only connection)
DATABASE_URL=postgres://openbook:devpassword@localhost:5432/openbook

# Redis (for caching and rate limiting)
REDIS_URL=redis://localhost:6379

# Cache TTL (seconds)
CACHE_TTL_CAMPAIGN=300
CACHE_TTL_TASK=60
CACHE_TTL_TRENDING=30

# Logging
LOG_LEVEL=info

# Environment
NODE_ENV=development
