# OpenBook Protocol - Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# NETWORK CONFIGURATION
# =============================================================================

# Solana Network (devnet, testnet, mainnet-beta)
SOLANA_NETWORK=devnet

# Solana RPC URL (get from Helius, QuickNode, or use public)
# Public devnet (rate limited): https://api.devnet.solana.com
# Helius: https://devnet.helius-rpc.com/?api-key=YOUR_KEY
# QuickNode: https://YOUR-ENDPOINT.solana-devnet.quiknode.pro/YOUR_KEY/
SOLANA_RPC_URL=https://api.devnet.solana.com

# Fallback RPC (optional but recommended)
SOLANA_RPC_FALLBACK_URL=https://api.devnet.solana.com

# =============================================================================
# PROGRAM IDS (Update after deploying to devnet/mainnet)
# =============================================================================

# These are placeholder IDs - replace with your deployed program addresses
PROGRAM_ID_CAMPAIGN=Camp1111111111111111111111111111111111111111
PROGRAM_ID_TASK=Task1111111111111111111111111111111111111111
PROGRAM_ID_BUDGET=Budg1111111111111111111111111111111111111111
PROGRAM_ID_ESCROW=Escr1111111111111111111111111111111111111111
PROGRAM_ID_PROOF=Prof1111111111111111111111111111111111111111
PROGRAM_ID_DISPUTE=Disp1111111111111111111111111111111111111111
PROGRAM_ID_GOVERNANCE=Gove1111111111111111111111111111111111111111

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL connection string
# Format: postgres://username:password@host:port/database
DATABASE_URL=postgres://openbook:devpassword@localhost:5432/openbook

# Password for PostgreSQL (used by docker-compose)
POSTGRES_PASSWORD=devpassword

# PostgreSQL port (default: 5432)
POSTGRES_PORT=5432

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================

# Redis connection URL
REDIS_URL=redis://localhost:6379

# Redis port (default: 6379)
REDIS_PORT=6379

# =============================================================================
# API CONFIGURATION
# =============================================================================

# API port
API_PORT=3001

# CORS origin (comma-separated for multiple)
# Use * for development, specific domains for production
CORS_ORIGIN=*

# Rate limiting (requests per minute)
RATE_LIMIT_ANONYMOUS=60
RATE_LIMIT_AUTHENTICATED=300

# =============================================================================
# WEB FRONTEND CONFIGURATION
# =============================================================================

# Web port
WEB_PORT=3000

# API URL (used by frontend)
NEXT_PUBLIC_API_URL=http://localhost:3001

# Solana RPC URL (used by frontend wallet adapter)
NEXT_PUBLIC_SOLANA_RPC_URL=https://api.devnet.solana.com

# Solana network (devnet, mainnet-beta)
NEXT_PUBLIC_SOLANA_NETWORK=devnet

# USDC Mint Address
# Devnet: EPjFWdd5AufqSSqeM2qN1xzybapC8G4wEGGkZwyTDt1v
# Mainnet: EPjFWdd5AufqSSqeM2qN1xzybapC8G4wEGGkZwyTDt1v
NEXT_PUBLIC_USDC_MINT=EPjFWdd5AufqSSqeM2qN1xzybapC8G4wEGGkZwyTDt1v

# =============================================================================
# ENVIRONMENT
# =============================================================================

# Node environment (development, production)
NODE_ENV=development

# =============================================================================
# OPTIONAL: KYC CONFIGURATION (if using Civic Pass)
# =============================================================================

# Civic Pass Gatekeeper Network ID
# Get from: https://civic.com
# CIVIC_GATEKEEPER_NETWORK=gatbGF9DvLAw3kWyn1EmH5Nh1Sqp8sTukF7yaQpSc71

# =============================================================================
# OPTIONAL: MONITORING
# =============================================================================

# Sentry DSN (for error tracking)
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Log level (debug, info, warn, error)
LOG_LEVEL=info

# =============================================================================
# NOTES
# =============================================================================

# 1. Never commit .env to git (it's in .gitignore)
# 2. Update program IDs after running `anchor deploy`
# 3. For mainnet, use paid RPC provider (Helius, QuickNode, etc.)
# 4. For production, set strong POSTGRES_PASSWORD
# 5. For production, set specific CORS_ORIGIN domains
